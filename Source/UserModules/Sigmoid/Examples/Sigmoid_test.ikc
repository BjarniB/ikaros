<?xml version="1.0"?>

<group title="Sigmoid Example">
	
		<module
        class       =   "FunctionGenerator"
        name        =   "SquareGen"
        type        =   "square"
        frequency   =   "0.0314"
        offset      =   "0.0"
        amplitude   =   "0.25"
        shift       =   "0.0"
   	/>

		<module
			class = "Sigmoid"
			name = "SigmoidInstance"
			scale  = "-1"
			alpha  = ".1"
			shift = "-5"
		/>

		<!-- connections -->
		<connection sourcemodule="SquareGen" source="OUTPUT" targetmodule="SigmoidInstance"
   	target="INPUT" />
		
      <view name="View">
			<object class="Plot " 
				module="SquareGen" 
				source="OUTPUT" 
				x="0" y="0" w="2" h="2"
				min="-1"
				max="1"
			/>  
			<object class="Plot " 
				module="SigmoidInstance" 
				source="OUTPUT" 
				x="2" y="0" w="2" h="2"
				min="-1"
				max="1"
			/>
			<object
		      class="Slider"
		      title="Amplitude"
		      module = "SquareGen"
		      parameter = "amplitude"
		      xindex = "0"
		      x="0" y="2" h="2"
		      max="1"
		      min="-1"
	   	/>
	   	<object
		      class="Slider"
		      title="Alpha"
		      module = "SigmoidInstance"
		      parameter = "alpha"
		      xindex = "0"
		      x="1" y="2" h="2"
		      max="2"
	   	/>
		</view>

</group>
 
