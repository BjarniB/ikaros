<?xml version="1.0"?>

<group title="Recorder Example">
	
		<module
			class = "Constant"
			name = "State"
			outputsize  = "1"
			data  = "0"
		/>
		<module
			class = "Constant"
			name = "Sync"
			outputsize  = "1"
			data  = "0"
		/>

		<module
			class = "Recorder"
			name = "Recorder"
			maxlength  = "500"
			repeat  = "true"
		/>
		<module 
			class = "FunctionGenerator" 
			name = "FunctionGenerator" 
			type = "sin" 
			frequency = "0.114" 
			offset = "0.5" 
			amplitude = "0.4" 
			shift = "0.1" 
		/>
		

        <connection sourcemodule = "FunctionGenerator" source = "OUTPUT" targetmodule = "Recorder" target = "INPUT" />
        <connection sourcemodule = "State" source = "OUTPUT" targetmodule = "Recorder" target = "STATE" />
        <connection sourcemodule = "Sync" source = "OUTPUT" targetmodule = "Recorder" target = "SYNC" />

		<view name="View">
			<object class="Plot " 
				module="FunctionGenerator" 
				source="OUTPUT" 
				x="0" y="0" w="2" h="2"
				min="0"
				max="1"
			/>
			<object class="Plot " 
				module="Recorder" 
				source="OUTPUT" 
				x="0" y="2" w="2" h="2"
				min="0"
				max="1"
				color="red"
			/>
			<object class="Switch"  module="State" parameter="data" x="2" y="0"  />
			<object class="Slider"  module="Sync" parameter="data" x="3" y="0" min="0" max="10" />
		</view>

</group>
 
