<?xml version="1.0"?>

<group title="Recorder Example">
	
		
		<module
        class = "Dynamixel"
        name = "Dynamixel"
        device  = "/dev/cu.usbserial-A600cUuc"
        servo_id = "1 2 3"
        index_mode = "indirect"
        printf_info ="none"
        use_feedback ="true"
    		baud_rate = "1000000"
    		angle_unit = "degrees"

    />

		<module
		class		=	"FunctionGenerator"
		name		=	"Pos"
		type		=	"ramp"
		frequency	=	"0.025"
		offset     	=	"0.0"
		amplitude	=	"300"
		shift		=	"0"
		/>

		<module
			class="Recorder"
			name="Recorder"
			maxlength = "500"
			repeat = "true"
		/>

		<module
			class = "Differentiator"
			name = "Differentiator"
			gain = "0.06"
		/>
		<module
			class = "Constant"
			name = "State"
			outputsize  = "1"
			data  = "0"
		/>
		<module
			class = "Constant"
			name = "Sync"
			outputsize  = "1"
			data  = "0"
		/>
		<module class = "Abs" name = "Abs" />
		<module class = "Constant" name = "NoTorque" outputsize = "10" data = "0 0 0 0 0 0 0 0 0" />	
		<module class = "Max" name = "Max" />
		<!-- connections -->
		
		<connection sourcemodule  = "Dynamixel" source  = "FEEDBACK_PRESENT_POSITION" targetmodule	 = "Differentiator" target  = "INPUT" />
		<connection sourcemodule  = "Differentiator" source  = "OUTPUT" targetmodule	 = "Abs" target  = "INPUT" />
		<connection sourcemodule  = "Abs" source  = "OUTPUT" targetmodule	 = "Recorder" target  = "INPUT" />
		
		<connection sourcemodule = "State" source = "OUTPUT" targetmodule = "Recorder" target = "STATE" />
     <connection sourcemodule = "Sync" source = "OUTPUT" targetmodule = "Recorder" target = "SYNC" />

     <!-- Make toqque null until playback-->
     <connection sourcemodule = "Recorder" source = "OUTPUT" targetmodule = "Max" target = "INPUT1" />
     <connection sourcemodule = "NoTorque" source = "OUTPUT" targetmodule = "Max" target = "INPUT2" />
     <connection sourcemodule = "Max" source = "OUTPUT" targetmodule = "Dynamixel" target = "TORQUE_LIMIT" />



      <view name="View">
			<object class="Plot " 
				module="Dynamixel" 
				source="FEEDBACK_PRESENT_POSITION" 
				x="0" y="0" w="2" h="2"
				min="0"
				max="360"
			/>
			<object class="Plot " 
				module="Recorder" 
				source="OUTPUT" 
				x="0" y="2" w="2" h="2"
				min="0"
				max="2"
				color="red"
			/>
			<object class="Switch"  module="State" parameter="data" x="2" y="0"  />
			<object class="Slider"  module="Sync" parameter="data" x="3" y="0" min="0" max="10" />  
			
	   	<!--<object
		      class="Switch"
		      title="State Switch 1"
		      module = "HumpInstance"
		      parameter = "state"
		      xindex = "0"
		      x="0" y="0" h="1"

			/>-->
		</view>

</group>
 
